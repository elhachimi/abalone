generator client {
  provider     = "prisma-client"
  output       = "../generated/client"
  moduleFormat = "esm"
  runtime      = "nodejs"
}

datasource db {
  provider = "postgresql"
}

model Villa {
  id                Int      @id @default(autoincrement())
  title             String
  bathrooms         Int
  bedrooms          Int
  description       String
  images            String[]
  is_featured       Boolean
  listing_type      String
  location          String
  max_guests        Int
  price_rent        Int
  price_sale        Int
  short_description String
}
